{% extends 'base.html.twig' %}

{% block title %}Saisie{% endblock %}

{% block body %}
 <link href="{{ asset('css/saisie.css') }}" rel="stylesheet">
 <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_blue.css">


{% if app.user == true %}
    {{form_start(form)}}
    <div class="form-saisie">
        <div class="evenement1">
            <div class="h1-row">Évènement</div>
            <div class='rowSaisie'>
                <legend class="label">Date</legend>
                {{form_widget(form.date)}}
            </div>
            <div class='rowSaisie'>
                <label>Association</label>
                {{form_widget(form.association)}}
            </div>

            <div class='rowSaisie'>
                <label class="label">Ville de départ</label>
                {{form_widget(form.villeDepart)}}
            </div>

            <div class='rowSaisie'>
                <label class="label">Ville d'Arrivée</label>
                {{form_widget(form.villeArrive)}}
            </div>
            <div class='rowSaisie bottom-input'>
                <label class="label">Raisons</label>
                {{form_widget(form.raisons)}}
            </div>
        </div>
        <div class="evenement2">
            <div class='rowSaisie'>
                <label>Heure de départ</label>
                {{form_widget(form.heureDepart , {'attr': {'class': 'heureDepart'}}) }}
            </div>

            <div class='rowSaisie'>
                <label>Heure d'arrivée</label>
                {{form_widget(form.heureArrivee, {'attr': {'class': 'heureArrivee'}}) }}
            </div>
            <div class='rowSaisie'>
                <label>duree</label>
                {{form_widget(form.duree, {'attr': {'class': 'dureeInput'}}) }}
            </div>
             <div class='rowSaisie'>
                <label>groupe</label>
                {{form_widget(form.groupe, {'attr': {'class': 'groupeSelect'}}) }}
            </div>
            <div class='rowSaisie' id="chargeInputId" data-charges='{{charges}}' >
                <label>charges</label>
                {{form_widget(form.charges, {'attr': {'class': 'chargesInput' }}) }}
            </div>
        </div>
    <div class="evenement3">
        <div class='rowSaisie' id="km">
            <label>Kilomètrage</label>
            {{form_widget(form.km, {'attr': {'class': 'kmInput'}}) }}
        </div>

        <div class='rowSaisie'>
            <label>barème</label>
            <input class="bareme" type="text" name="barème">
        </div>

        <div class='rowSaisie'>
            <label>Frais</label>
            {{form_widget(form.frais, {'attr': {'class': 'coutInput'}}) }}
        </div>

        
        <div class='rowSaisie'>
            <label>frais kilométriques</label>
            {{form_widget(form.fraisKilometrique, {'attr': {'class': 'fraisInput'}}) }}
        </div>
</div>
<div class="evenement4">
        <div class='rowSaisie'>
            <label>total note de frais</label>
            <input  class="totalNote" type="text" name="totalNote" value="0">
        </div>

        <div class='rowSaisie'>
            <label>Dons</label>
            {{form_widget(form.dons, {'attr': {'class': 'donsInput'}}) }}
        </div>

        <div class='rowSaisie'>
            <label>A payer</label>
            {{form_widget(form.aPayer, {'attr': {'class': 'apayerInput'}}) }}
        </div>

        <div class='rowSaisie'>
            <label>heures valorisées</label>
            {{form_widget(form.heuresValorisees, {'attr': {'class': 'heureValoriseesInput'}}) }}
        </div>

    </div>
        <div class='rowSaisie'>
                {{form_widget(form.enregistrer , {'attr': {'class': 'btnSubmitSaisie'}}) }}
        </div>
    </div>


</div>
    {{form_end(form)}}

{% else %}
    <h1>devez etre connectez pour faire une saisie</h1>
{% endif %}


{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('saisie') }}

{% endblock %}

