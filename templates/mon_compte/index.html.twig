{% extends 'base.html.twig' %}

{% block title %}MonCompte{% endblock %}

{% block body %}
 <link href="{{ asset('css/moncompte.css') }}" rel="stylesheet">


<div class="infoPerso">
    <h1>Information sur mon compte</h1>
    <div class="infoPerso-container">
        <p>nom d'utilisateur : </p>
        <p>{{ user.username }}</p>
    </div>
     <div class="infoPerso-container">
        <p> adresse email : </p>
        <p>{{ user.email }}</p>
    </div>
    <div class="infoPerso-container">
        <p> mot de passe : </p>
        <p>********</p>
    </div>
     <div class="infoPerso-container">
        <p> vous avez realis√© {% if actions == 1 %}
             {{actions}} saisie</p>
        {% else %}
             {{actions}} saisies</p>
        {% endif %}
             <a href="{{ path('recapitulatif') }}"><button class="btn-saisie">Mes saisies</button></a>
        
    </div>


    {% if app.user.profilPicture != null %}
        <img src="{{ asset('/build/profil_picture/' ~ app.user.profilPicture) }}" alt="" class="user-avatar" />
    {% else %}
        <img src="{{ asset('/build/profil_picture/default_profil.png') }}" alt="" class="user-avatar default" />
    {% endif %}
</div>
{% endblock %}
